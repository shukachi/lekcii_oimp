	// Ожидание нажатия клавиши перед выходом
	void getEnter()	{
	cout << "\n\nНажмите Enter для завершения...";
	cin.clear();
	cin.ignore(numeric_limits<streamsize>::max(), '\n'); 
	cin.get(); 
	}

	enum ExitCode {
	SUCCESS,
	SPECIAL_CASE_ZERO,
	INVALID_INPUT 
};

